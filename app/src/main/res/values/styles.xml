<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- stili per pagine HOME -->
    <style name="section_blocchi_home">
        <item name="android:layout_width">310dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">60dp</item>
    </style>

    <!-- HEADERS-->

            <!-- stili comune per titolo pagine -->
            <style name="titoli_pagine">
                <item name="android:layout_centerHorizontal">true</item>
                <item name="android:textSize">40dp</item>
                <item name="android:layout_marginBottom">50dp</item>
                <item name="fontFamily">@font/robotobold</item>
                <item name="android:textColor">#171717</item>
            </style>

            <style name="titolo_pagina_con_tasto_back">
                <item name="android:textSize">40dp</item>
                <item name="fontFamily">@font/robotobold</item>
                <item name="android:textColor">#171717</item>
            </style>

<!--    TEXT STYLES-->

    <style name="descrizione_sezione">
        <item name="android:textSize">18dp</item>
        <item name="fontFamily">@font/robotoslab</item>
        <item name="android:textColor">#171717</item>
    </style>

    <style name="valore_slider_controllo_remoto">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">24dp</item>
        <item name="fontFamily">@font/robotobold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginBottom">44dp</item>
    </style>

    <style name="label_cella_tutorial">
        <item name="android:textSize">18dp</item>
        <item name="fontFamily">@font/robotobold</item>
        <item name="android:textColor">#171717</item>
    </style>

    <style name="label_card_home">
        <item name="android:textSize">24dp</item>
        <item name="fontFamily">@font/robotobold</item>
        <item name="android:textColor">#171717</item>
    </style>


    <!-- stili "dettagli incubata" -->

    <!--sezione speratura, calendario, controllo romoto ecc.. -->
    <style name="sezione_dettagli">
        <item name="android:layout_width">310dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <!-- stili iconcine nelle varie sezioni -->
    <style name="sezione_icone">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_gravity">center|left</item>
    </style>

</resources>
