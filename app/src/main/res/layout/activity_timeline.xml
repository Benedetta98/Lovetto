                            android:textSize="12dp" />
                    </GridLayout>
                </GridLayout>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:background="@drawable/file_timeline_sx"
                        android:fontFamily="@font/robotobold"
                        android:padding="12dp"
                        android:text="Giorno 20"
                        android:gravity="center|left"
                        android:textColor="#000"
                        android:textSize="14dp" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:background="@drawable/file_timeline_dx"
                            android:fontFamily="@font/robotoregular"
                            android:text=" I tuoi pulcini stanno nascendo, non toccarli.\n Gradi: 37,7 °C - 99,86 °F\n Uminidità: 70%"
                            android:textColor="#BDBDBD"
                            android:textSize="12dp" />
                    </GridLayout>
                </GridLayout>


                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:background="@drawable/file_timeline_sx"
                        android:fontFamily="@font/robotobold"
                        android:padding="12dp"
                        android:text="Giorno 21"
                        android:gravity="center|left"
                        android:textColor="#000"
                        android:textSize="14dp" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:background="@drawable/file_timeline_dx"
                            android:fontFamily="@font/robotoregular"
                            android:text="I tuoi pulcini sono nati, lasciali asciugare per qualche ora e mettili nell'apposita box con lampada."
                            android:textColor="#BDBDBD"
                            android:textSize="12dp" />
                    </GridLayout>
                </GridLayout>


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/tabbar" />

</RelativeLayout>