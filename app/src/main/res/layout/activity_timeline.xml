                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:background="@drawable/file_timeline_sx"
                        android:fontFamily="@font/robotobold"
                        android:padding="12dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Giorno 11-17"
                        android:textColor="#000"
                        android:textSize="14dp" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:background="@drawable/file_timeline_dx"
                            android:fontFamily="@font/robotoregular"
                            android:text=" Gira le uova.\n Gradi: 37,7 °C - 99,86 °F\n Uminidità: 55%-50%. Controlla livello acqua"
                            android:textColor="#BDBDBD"
                            android:textSize="12dp" />
                    </GridLayout>
                </GridLayout>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:background="@drawable/file_timeline_sx"
                        android:fontFamily="@font/robotobold"
                        android:padding="12dp"
                        android:gravity="center|left"
                        android:text="Giorno 18"
                        android:textColor="#000"
                        android:textSize="14dp" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:layout_row="0"
                            android:layout_column="0"
